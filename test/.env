#
# Environment variables needed for running tests
#

YII_DEBUG=1
YII_ENV=test

# The PHP version to use for compiling & running the project
PHP_VERSION=7.3
# The url of the yii2 endpoint that serves the JSONPRC service
JSONRPC_ENDPOINT=http://host.docker.internal:8073/test/codeception/web

# Database settings
DB_TYPE=mysql
DB_HOST=host.docker.internal
DB_PORT=3306
DB_DATABASE=tests
DB_USER=bibliograph
DB_PASSWORD=bibliograph
DB_ROOT_PASSWORD=bibliograph
