{
  "name": "bibliograph",
  "version": "3.0.0-alpha.3",
  "description": "Bibliograph is a powerful open source web application for the collaborative collection, editing and publishing of bibliographic data.",
  "main": "",
  "directories": {
    "test": "test"
  },
  "homepage": "http://www.bibliograph.org",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://github.com/caolan/async/raw/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cboulanger/bibliograph.git"
  },
  "scripts": {
    "postinstall": "bash bin/update-dependencies",
    "development": "bash bin/source-server.sh",
    "test": "bash test/codeception-all.sh && bash test/api.sh || exit $?",
    "test-dev": "bash test/codeception-all.sh && bash test/api.sh development",
    "compile": "cd src/client/bibliograph && qx compile --watch",
    "log": "bash bin/view-log.sh",
    "create-migration" : "bash bin/create-migration.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "qooxdoo": "^6.0.1",
    "qooxdoo-sdk": "^6.0.0-alpha",
    "qxcompiler": "^0.2.0",
    "raptor-client": "github:cboulanger/raptor-client",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "array-equal": "^1.0.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eventsource": "^1.0.5",
    "json-diff": "^0.5.2",
    "mocha": "^4.1.0",
    "r2": "^2.0.0",
    "run-script-os": "^1.0.3",
    "standard": "^11.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "qx": true,
      "qcl": true,
      "dialog": true,
      "bibliograph": true
    }
  }
}
