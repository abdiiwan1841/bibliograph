{
  "name": "bibliograph",
  "version": "3.0.0-beta.79",
  "description": "Bibliograph is a powerful open source web application for the collaborative collection, editing and publishing of bibliographic data.",
  "main": "",
  "directories": {
    "test": "test"
  },
  "homepage": "http://www.bibliograph.org",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://github.com/caolan/async/raw/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cboulanger/bibliograph.git"
  },
  "scripts": {
    "env:install":              "tool/env/install",
    "env:update":               "tool/env/update",
    "env:servers:start":        "tool/env/servers-start",
    "env:servers:stop":         "tool/env/servers-stop",
    "dev:run:bibliograph-clean": "tool/run/bibliograph clean",
    "dev:run:bibliograph":      "tool/run/bibliograph",
    "dev:compile-watch":        "npx qx compile --watch",
    "dev:cleanup":              "npx qx clean",
    "dev:extract-translations": "cd src/server && php yii message config/i18n.php",
    "test:codeception:all":     "tool/test/codeception",
    "test:codeception:custom":  "tool/test/codeception \"api AASetupControllerCest --env empty-database -vv\"",
    "test:testtapper:all":      "tool/test/testtapper",
    "test:testtapper:custom":   "tool/test/testtapper bibliograph-test bibliograph.test.t3.Access",
    "test:uitests":             "node ./test/uitests/test-login.js",
    "dist:docker:build":        "tool/dist/build config.dist/.env.local.docker",
    "dist:docker:run":          "tool/dist/run",
    "dist:localhost:build":     "tool/dist/build config.dist/.env.local.localhost",
    "dist:localhost:deploy-clean": "DEPLOY_CLEAN=true tool/dist/deploy config.dist/.env.local.localhost",
    "dist:demo3:build":         "tool/dist/build config.dist/.env.demo3",
    "dist:demo3:deploy-clean":  "DEPLOY_CLEAN=true tool/dist/deploy config.dist/.env.local.localhost"
  },
  "ntl": {
    "descriptions": {
      "env:install": "Install the development environment",
      "env:update": "Update dependencies (npm, Composer, qooxdoo packages, GitHub repos)",
      "env:servers:start": "Start webserver and database server",
      "env:servers:stop": "Stop webserver and database server",
      "dev:run:bibliograph-clean": "Delete all data, compile app from scratch, and open it in new tab",
      "dev:run:bibliograph": "Re-open already compiled app in a new tab",
      "dev:compile-watch": "Start continous compilation",
      "dev:cleanup": "Delete all compilation artefacts",
      "dev:extract-translations": "Extract translations",
      "test:codeception:all": "Run all codeption tests",
      "test:codeception:custom": "Run custom codeception test (see package.json)",
      "test:testtapper:all": "Run all testtapper tests",
      "test:testtapper:custom": "Run custom testtapper test (see package.json)"
    }
  },
  "_old_scripts": {
    "Create new migration": "build/script/run-in-new-terminal $(pwd)/build/script/create-migration",
    "Create JSONRPC proxy methods": "cd src/server && php yii rpc-proxy/create",
    "Compile modules": "build/script/modules-compile",
    "Build distributable package (PHP 7.3)": "build/script/dist-build || exit $?",
    "Run production build": "build/script/dist-run",
    "Clean up production build": "build/script/dist-clean"
  },
  "author": "Christian Boulanger (@cboulanger) info@bibliograph.org",
  "license": "ISC",
  "devDependencies": {
    "@qooxdoo/compiler": "^1.0.0-beta.20200613-2032",
    "@qooxdoo/eslint-config-jsdoc-disable": "^1.0.3",
    "@qooxdoo/eslint-config-qx": "^1.3.5",
    "@qooxdoo/eslint-plugin-qx": "^1.2.1",
    "array-equal": "^1.0.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.1.0",
    "eslint-config-qx": "^0.2.6",
    "eslint-plugin-import": "^2.21.2",
    "github-remove-all-releases": "^1.0.1",
    "json-diff": "^0.5.4",
    "ntl": "^5.0.0",
    "release-it": "^12.3.5",
    "ssh2-promise": "^0.1.7",
    "tape": "^5.0.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "qx": true,
      "qcl": true,
      "dialog": true,
      "bibliograph": true
    }
  }
}
