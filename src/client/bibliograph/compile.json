{
  "environment": {
    "app.version" : "3.0.0-beta",
    "qx.icontheme" : "Tango",
    "qx.debug" : true,
    "app.serverUrl" : "../../../../server/web/?r="
  },

  "targets": [
    {
      "type": "source",
      "outputPath": "source-compiled",
      "environment": {
        "app.mode" : "development"
      }
    },
    {
      "type": "build",
      "outputPath": "build-compiled",
      "environment": {
        "app.serverUrl" : "../server.php?r=",
        "app.mode" : "production"
      }
    }
  ],
  "defaultTarget": "source",
  "locales": ["en","de"],

  "applications": [
    {
      "class": "bibliograph.Application",
      "theme": "bibliograph.theme.Theme",
      "name":  "bibliograph",
      "title": "Bibliograph Bibliographic Data Manager",
      "include" : ["bibliograph.plugins.*"]
    }
  ],

  "libraries": [
    "../../vcslib/qooxdoo/framework",
    "../../server/modules/z3950/client",
    "."
  ],

  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "globals": {
      "JSZip": false
    } 
  }
}