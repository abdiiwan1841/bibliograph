{
  "eslintConfig": {
    "globals": {
      "JSZip": false
    },
    "parserOptions": {
      "ecmaVersion": 2017
    }
  },
  "libraries": [
    ".",
    "../../server/modules/z3950/client",
    "../../server/modules/webservices/client",
    "../../server/modules/backup/client"
  ],
  "environment": {
    "qx.debug": true,
    "qx.icontheme": "Tango",
    "module.objectid": true,
    "app.version": "3.0.0-beta.78"
  },
  "applications": [
    {
      "title": "Bibliograph Bibliographic Data Manager",
      "name": "bibliograph",
      "theme": "bibliograph.theme.Theme",
      "class": "bibliograph.Application",
      "bootPath": "source/boot",
      "include": [
        "bibliograph.plugins.*"
      ]
    },
    {
      "class": "qxl.apiviewer.Application",
      "theme": "qxl.apiviewer.Theme",
      "name": "apiviewer",
      "title": "Qooxdoo API Viewer",
      "environment": {
        "excludeFromAPIViewer": [
          "qxl.apiviewer.*"
        ]
      },
      "include": [
        "qx.*"
      ],
      "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement"
      ]
    }
  ],
  "locales": [
    "en",
    "de"
  ],
  "defaultTarget": "source",
  "targets": [
    {
      "//": "The local 'source' target",
      "type": "source",
      "environment": {
        "app.mode": "development",
        "app.serverUrl": "../../../../server/web/?r="
      },
      "outputPath": "compiled/source"
    },
    {
      "//": "The local 'build' target",
      "type": "build",
      "environment": {
        "app.mode": "production",
        "app.serverUrl": "../../../../server/web/?r="
      },
      "outputPath": "compiled/build"
    },
    {
      "//": "A local source build inlcuding an event recorder and an empty test database ",
      "type": "source-recorder",
      "environment": {
        "app.mode": "development",
        "app.serverUrl": "../../../../server/tests/?r=",
        "eventrecorder.enabled": true,
        "eventrecorder.mode": "presentation",
        "eventrecorder.autoplay": false
      },
      "outputPath": "compiled/source-recorder",
      "targetClass": "SourceTarget",
      "include": [
        "cboulanger.eventrecorder.UiController",
        "cboulanger.eventrecorder.ObjectIdGenerator",
        "qookery.*",
        "qookery.ace.*"
      ]
    },
    {
      "//": "A source build to be deployed, including an event recorder, for debugging purposes",
      "type": "dist-debug",
      "environment": {
        "app.mode": "development",
        "app.serverUrl": "server.php?r=",
        "eventrecorder.enabled": true,
        "eventrecorder.scriptable": false,
        "eventrecorder.hidden": false,
        "eventrecorder.mode": "presentation",
        "eventrecorder.showProgress": false,
        "eventrecorder.gistId": "",
        "eventrecorder.autoplay": false,
        "eventrecorder.playerType": "qooxdoo"
      },
      "outputPath": "compiled/dist-debug",
      "targetClass": "SourceTarget",
      "include": [
        "cboulanger.eventrecorder.UiController",
        "cboulanger.eventrecorder.ObjectIdGenerator"
      ],
      "bundle": {
        "include": [
          "qx.*"
        ],
        "exclude": [
          "qx.util.*"
        ]
      }
    },
    {
      "//": "The final 'build' target for deployment",
      "type": "dist-build",
      "targetClass": "BuildTarget",
      "outputPath": "compiled/dist-build",
      "environment": {
        "qx.debug": false,
        "app.mode": "production",
        "app.serverUrl": "server.php?r="
      }
    }
  ]
}
