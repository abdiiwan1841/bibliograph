#!/usr/bin/env bash
# Update dependencies

set -e

source tool/env/check

source tool/env/install-libs

echo ">>> Updating qooxdoo..."
npm install @qooxdoo/compiler

echo ">>> Updating packages..."
pushd src/client/bibliograph >/dev/null
npx qx pkg upgrade --prereleases --releases-only
popd >/dev/null

echo ">>> Updating composer packages..."
tool/dev/composer update
