<?xml version="1.0" encoding="utf-8"?>
<qxt:component 
  xmlns:qx="http://www.qxtransformer.org/qooxdoo/0.8"
  xmlns:qxt="http://www.qxtransformer.org/extension/0.4" 
  xmlns:qcl="http://www.qooxdoo.org/contrib/qcl/trunk"
  author="Christian Boulanger"
  className="bibliograph.ui.collection.NoteTreeUi" 
  tagName="noteTree"
  extend="bibliograph.ui.collection.NoteTreeView">
  <qx:composite>
    <qx:vbox>
             
      <!-- pane for tree views-->
      <qx:composite id="_treePane" qxt:scope="this" qxt:flex="10">
        <qx:vbox />
      </qx:composite>
    
      <qx:menuBar height="18" backgroundColor="white">
        <qx:menuBarButton height="16" width="16" icon="icon/16/actions/list-add.png" />
        <qx:menuBarButton height="16" width="16" icon="icon/16/actions/list-remove.png" />
        <qx:menuBarButton height="16" width="16" icon="icon/16/categories/system.png" >
          <qx:menu>
          
            <qx:menuButton 
              icon="icon/16/actions/view-refresh.png"
              label="Reload">
              <qxt:listener type="execute">
                this.reload();
              </qxt:listener>              
            </qx:menuButton>
            
            <qx:menuButton
              icon="icon/16/actions/edit-find.png"
              label="Find Folder">
            </qx:menuButton>
            
          </qx:menu>
        </qx:menuBarButton>
        
        <qx:label 
          id="_statusLabel" qxt:scope="this" 
          qxt:flex="1" rich="true"
          padding="3" />
      </qx:menuBar>
  
    </qx:vbox>
  </qx:composite>

</qxt:component>