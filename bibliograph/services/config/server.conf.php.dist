// DONT TOUCH
//-------------------------------------------------------------

ini_set('include_path', implode(
  PATH_SEPARATOR,
  array(
    QCL_CLASS_PATH,
    APPLICATION_CLASS_PATH,
    ini_get("include_path")
  )
) );
